{
    "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "ignore": [],
        "indentSize": 4,
        "indentStyle": "space",
        "lineWidth": 160
    },
    "javascript": {
        "formatter": {
            "enabled": true,
            "quoteStyle": "single",
            "jsxQuoteStyle": "single",
            "trailingComma": "all",
            "semicolons": "asNeeded",
            "arrowParentheses": "asNeeded",
            "indentSize": 4,
            "indentStyle": "space",
            "lineWidth": 160,
            "quoteProperties": "asNeeded"
        }
    }
}
